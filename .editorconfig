root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[Makefile]
indent_style = tab

[*.{nim,nimble}]
indent_size = 2

[*.html]
indent_size = 2

[tests/scfg/**]
trim_trailing_whitespace = unset
indent_style = unset
insert_final_newline = unset

